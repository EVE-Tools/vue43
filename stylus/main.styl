@require '~vuetify/src/stylus/settings/_colors';

$body-font-family ?= 'Open Sans', Helvetica, sans-serif;
$font-size-root ?= 1em;
$line-height-root ?= 1.5;

a {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: Teko, Helvetica, sans-serif;
  font-weight: 500;
  text-transform: uppercase;
}

h1 {
  font-size: 4.236em;
  color: #faa732;
}

h2 {
  font-size: 2.618em;
}

h3 {
  font-size: 1.618em;
}

.list__tile--highlighted {
  background-color: #333333 !important;
}

$material-dark = {
  status-bar: {
    regular: #000000,
    lights-out: rgba(#000, 0.2)
  },
  app-bar: rgba(#000, 0.8),
  background: #000000,
  cards: rgba(0, 0, 0, 0.8),
  chips: {
    background: #FFF,
    primary: rgba(#000, 0.87)
  },
  dividers: rgba(#fff, 0.12),
  text: {
    theme: #fff,
    primary: #fff,
    secondary: rgba(#fff, 0.7),
    disabled: rgba(#fff, 0.5),
    link: ($blue.accent-1),
    link-hover: ($grey.lighten-3)
  },
  icons: {
    active: #fff,
    inactive: rgba(#fff, 0.5)
  },
  inputs: {
    solo-inverted: rgba(#fff, 0.16),
    solo-inverted-focused: #fff,
    solo-inverted-focused-text: rgba(#000, 0.87)
  },
  buttons: {
    disabled: rgba(#fff, 0.3),
    focused: rgba(#fff, 0.12),
    focused-alt: rgba(#fff, 0.1),
    pressed: rgba(#ccc, 0.25)
  },
  expansion-panels: {
    focus: rgba(#000, 0.7)
  },
  selection-controls: {
    thumb: {
      inactive: ($grey.lighten-1),
      disabled: ($grey.darken-3)
    },
    track: {
      inactive: rgba(#fff, 0.3),
      disabled: rgba(#fff, 0.1)
    }
  },
  slider: {
    active: rgba(#fff, 0.3),
    inactive: rgba(#fff, 0.2),
    disabled: rgba(#fff, 0.2),
    discrete: #fff
  },
  tabs: {
    active: #fff
  },
  input-bottom-line: rgba(#fff, 0.7),
  stepper: {
    active: rgba(#fff, 1),
    completed: rgba(#fff, 0.87),
    hover: rgba(#fff, 0.75)
  },
  table: {
    active: #505050,
    hover: ($grey.darken-2)
  },
  picker: {
    body: #424242,
    clock: ($grey.darken-2),
    title: ($grey.darken-2)
  },
  bg-color: rgba(32, 32, 32, 1),
  fg-color: #fff,
  text-color: #fff,
  primary-text-percent: 1,
  secondary-text-percent: 0.7,
  disabledORhints-text-percent: 0.5,
  divider-percent: 0.12,
  active-icon-percent: 1,
  inactive-icon-percent: 0.5
};

body {
  background: #000 url('~/assets/background_nebula.jpg') no-repeat center top fixed !important
  background-size: cover !important
}

.application {
  background-color: rgba(0, 0, 0, 0.3) !important
}

@import '~vuetify/src/stylus/main';

.theme--dark .table tbody tr:hover:not(.datatable__expand-row), 
.application .theme--dark.table tbody tr:hover:not(.datatable__expand-row) {
  background-color: #222222;
}